<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/Palette1</item>
        <item name="colorPrimaryDark">@color/Palette5a</item>
        <item name="colorAccent">@color/Palette3</item>
    </style>

    <style name="Animation" />

    <style
        name="Animation.slideInFromLeftAnimation"
        parent="android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slideinleft_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/hold</item>
        <item name="android:activityCloseEnterAnimation">@anim/hold</item>
        <item name="android:activityCloseExitAnimation">@anim/slideinleft_exit</item>
    </style>
</resources>

